<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-3"><%= Date.today.strftime("%A, %B %-d, %Y") %></h1>
  </div>
</div>
<div class="container">
  <p id="notice"><%= notice %></p>

  <div class="row">
    <div class="col-xs-11">
      <% @articles.each do |article| %>
          <div class="media">
            <div class="media-left media-middle">
              <%= link_to article do %>
                <img class="media-object rounded-circle" src="http://placehold.it/80x80" alt="Generic placeholder image">
              <% end %>
            </div>
            <div class="media-body">
              <div class="article-category">
                <%= article.category.title %>
              </div>
              <%= link_to article do %>
                <h4 class="article-title"><%= article.title %></h4>
                <!-- <p><% truncate(article.body, length: 300) %></p> -->
              <% end %>
            </div>
          </div>
        <hr>
      <% end %>
    </div>
  </div>

<br>

</div>
